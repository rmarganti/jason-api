{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "declarationDir": "./types",
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        },
        "sourceMap": true,
        "strict": true,
        "target": "es2016"
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules/**/*", "**/Entity.ts"]
}
