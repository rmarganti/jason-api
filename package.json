        "pluralize": "^7.0.0",
        "ramda": "^0.25.0"
    },
    "devDependencies": {
        "@types/isomorphic-fetch": "^0.0.34",
        "@types/pluralize": "^0.0.28",
        "@types/ramda": "^0.25.15",
        "@types/react": "^16.0.34",
        "@types/react-redux": "^5.0.14",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "jest": "^22.1.1",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "react-redux": "^5.0.6",
        "redux": "^3.7.2",
        "redux-mock-store": "^1.4.0",
        "rimraf": "^2.6.2",
        "ts-json-api": "0.2.0-beta.3",
        "typescript": "^2.6.2"
    },
    "peerDependencies": {
        "react": "^0.14.0 || ^15.0.0-0 || ^16.0.0-0",
        "react-redux": "^5.0.6",
        "redux": "^2.0.0 || ^3.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
